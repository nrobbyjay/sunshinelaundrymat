{
    "name": "react-laundrymat",
    "version": "1.0",
    "private": true,
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "preview": "vite start",
        "test": "jest --config jest.config.json",
        "lint": "eslint src/**/*.jsx -c eslint.config.json"
    },
    "dependencies": {
        "react-router-dom": "^6.18.0",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.1.0",
        "vite": "^5.3.0",
        "eslint": "^8.50.0",
        "jest": "^29.6.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/jest-dom": "^6.0.0",
        "jest-environment-jsdom": "^29.6.0",
        "babel-jest": "^29.6.0",
        "@babel/preset-env": "^7.24.0",
        "@babel/preset-react": "^7.24.0"
    },

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "double"
            ]
        }
    }
}