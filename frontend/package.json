{
    "name": "react-laundrymat",
    "version": "1.0",
    "private": true,
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "preview": "vite start",
        "lint": "eslint src/**/*.js src/**/*.jsx",
        "test": "jest",
        "test-ci": "jest --ci --coverage"
    },
    "dependencies": {
        "react-router-dom": "^6.18.0",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.1.0",
        "vite": "^5.3.0",
        "eslint": "^8.50.0",
        "jest": "^29.6.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/jest-dom": "^6.0.0"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "jest": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "plugins": [
            "react"
        ],
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "double"
            ]
        }
    }
}